<div id="_formularioEditar" style="display: none;">
    <div class="card">
        <div class="card-header">
            Editar Empleado
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="editNombre">Nombre:</label>
                <input type="text" class="form-control" id="editNombre">
            </div>
            <div class="form-group">
                <label for="editApellidoPaterno">Apellido Paterno:</label>
                <input type="text" class="form-control" id="editApellidoPaterno">
            </div>
            <div class="form-group">
                <label for="editApellidoMaterno">Apellido Materno:</label>
                <input type="text" class="form-control" id="editApellidoMaterno">
            </div>
            <div class="form-group">
                <label for="editEmail">Email:</label>
                <input type="email" class="form-control" id="editEmail">
            </div>
            <div class="form-group">
                <label for="editTelefono">Teléfono:</label>
                <input type="tel" class="form-control" id="editTelefono">
            </div>
            <div class="form-group">
                <label for="editPuesto">Puesto:</label>
                <input type="text" class="form-control" id="editPuesto">
            </div>
